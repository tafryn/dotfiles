Config { font = "xft:Bitstream Vera Sans Mono:size=9"
       , bgColor = "black"
       , fgColor = "darkslateblue"
       , position = TopW L 96
	   , lowerOnStart = True
       , commands = [ Run Cpu ["-t","▣: <total>","-L","20","-H","40","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%","-L","40","-H","80","--normal","yellow","--high","red"] 10
					, Run Thermal "THM" ["-t","<temp>°C","-H","60","--high","red"] 10
                    , Run Date "%A %d %B %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %memory% | %cpu% %THM% | <fc=#ee9a00>%date%</fc>"
       }
